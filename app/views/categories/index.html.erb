<h2>Listing Categories : <%= @categories.length %></h2>

<% if @categories.empty? %>
	<p>Categories have not been added yet</p>
<% else %>

<ol>
	<% @categories.each do |category| %>
	<li><%= link_to category.name,category_path(category.id) %>
		(<%= Product.where('category_id =?',category.id).length %>)
		<%#= link_to "show", category_path(category.id) %>
	</li>
	<% end %>
</ol>
<% end %>


